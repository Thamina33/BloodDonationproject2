<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent">
       <RelativeLayout
           android:layout_margin="16dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

           <TextView
               android:id="@+id/text1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/name"
               android:textColor="@color/gray_light"
               android:textSize="20sp"
               android:textStyle="bold" />
           <TextView
               android:id="@+id/name"
               android:layout_below="@+id/text1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/txt_black"
               android:textSize="20sp"
               android:textStyle="normal"
               android:text="@string/dummy123"
               />
           <TextView
               android:id="@+id/text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/name"
               android:layout_marginTop="8dp"
               android:textColor="@color/gray_light"
               android:textSize="20sp"
               android:textStyle="bold"
               android:text="@string/location_l"
               />
           <TextView
               android:id="@+id/location"
               android:layout_below="@+id/text2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/txt_black"
               android:textSize="20sp"
               android:textStyle="normal"
               android:text="@string/location"
               />

           <TextView
               android:id="@+id/time_counter"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/location"
               android:layout_marginTop="12dp"
               android:text="@string/num_5"
               android:textColor="@color/gray_light"
               android:textSize="20sp"
               android:textStyle="bold" />
           <TextView
               android:id="@+id/text3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toEndOf="@+id/time_counter"
               android:layout_below="@+id/location"
               android:layout_marginStart="8dp"
               android:layout_marginTop="12dp"
               android:textColor="@color/gray_light"
               android:textSize="20sp"
               android:textStyle="bold"
               android:text="@string/min_ago"
               />

           <ImageView
               android:id="@+id/chat"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/location"
               android:layout_alignParentEnd="true"
               android:layout_marginStart="8dp"
               android:layout_marginTop="12dp"
               android:background="@drawable/ic_baseline_chat_24" />
           <FrameLayout
               android:layout_alignParentEnd="true"
               android:layout_width="120dp"
               android:layout_marginTop="16dp"
               android:background="@drawable/pink_orange_shape"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_gravity="start|center"
                   android:layout_marginStart="16dp"
                   android:layout_margin="8dp"
                   android:background="@drawable/white_round"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/blood_grp"
                       android:layout_margin="4dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:backgroundTint="@color/white"
                       android:text="@string/a"
                       android:textColor="@color/pink"
                       android:textSize="16sp"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:textStyle="bold" />
               </LinearLayout>

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:backgroundTint="@color/white"
                   android:text="needed"
                   android:textColor="@color/white"
                   android:textSize="16sp"
                   android:layout_marginEnd="8dp"
                   android:layout_gravity="center|end"
                   android:gravity="center|end"
                   android:textStyle="bold" />
           </FrameLayout>
       </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>