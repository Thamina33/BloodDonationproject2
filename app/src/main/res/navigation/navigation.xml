<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.auth.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_accountSetUpFragment"
            app:destination="@id/accountSetUpFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_blood_requestFragment"
            app:destination="@id/blood_requestFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.auth.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_homeFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/blood_requestFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.blood_requestFragment"
        android:label="fragment_blood_request"
        tools:layout="@layout/fragment_blood_request" />
    <fragment
        android:id="@+id/accountSetUpFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.AccountSetUpFragment"
        android:label="fragment_account_set_up"
        tools:layout="@layout/fragment_account_set_up" >
        <action
            android:id="@+id/action_accountSetUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.rahat.gtaf.blooddonationproject2.fragment.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>